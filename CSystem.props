<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition="'$(SingleFolder)' == ''">
    <SingleFolder>true</SingleFolder>
  </PropertyGroup>

  <PropertyGroup Condition="'$(OutputFolder)' == ''">
    <OutputFolder>$(SolutionDir)\</OutputFolder>
  </PropertyGroup>

	<PropertyGroup>
    <ObjectFolder>$(OutputFolder)obj\</ObjectFolder>
	  <BinaryFolder>$(OutputFolder)bin\</BinaryFolder>
	  <ImportFolder>$(OutputFolder)lib\</ImportFolder>
    <SymbolFolder>$(OutputFolder)pdb\</SymbolFolder>
  </PropertyGroup>

  <PropertyGroup>
    <INC_DIR>$(SolutionDir)\include\</INC_DIR>
    <PRV_DIR>$(SolutionDir)\private\</PRV_DIR>
    <INC_DIRS>$(INC_DIR);$(INC_DIRS);</INC_DIRS>
    <INC_DIRS>$(INC_DIR)CsCore\;$(PRV_DIR)CsCore\;$(INC_DIRS);</INC_DIRS>
	  <INC_DIRS>$(INC_DIR)CsGeometry\;$(PRV_DIR)CsGeometry\;$(INC_DIRS);</INC_DIRS>
    <THD_DIR>$(SolutionDir)\thirds\</THD_DIR>
    <IncludePath>$(THD_DIR)include\;$(INC_DIRS);$(IncludePath);</IncludePath>
    <LibraryPath>$(THD_DIR)lib\;$(LibraryPath)</LibraryPath>
  </PropertyGroup>

  <ItemDefinitionGroup>
    <ClCompile>
      <DisableSpecificWarnings>4293;%(DisableSpecificWarnings)</DisableSpecificWarnings>
    </ClCompile>
  </ItemDefinitionGroup>

</Project>
